<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.activities">

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/searchable" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.airbnb.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.airbnb.activities.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.airbnb.activities.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.airbnb.activities.MainLoggedInActivity" />
        <activity android:name="com.airbnb.activities.SearchResultActivity"></activity>
    </application>

</manifest>